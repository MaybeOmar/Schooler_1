<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_mcq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MCQ" />

            <RadioButton
                android:id="@+id/radio_button_essay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Essay" />
        </RadioGroup>

        <EditText
            android:id="@+id/edit_text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter question"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_text_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option A"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_text_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option B"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_text_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option C"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_text_option_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option D"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_save_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Question" />

    </LinearLayout>


</LinearLayout>
